@import 'library.styl'

//Typography

rem(property, pixels)
	// first in pixels for bad browsers
	add-property(property, (pixels * 1px))
	add-property(property, (pixels * 0.1rem))

html
	font-size 62.5%

h1, h2, h3, h5, h5, h6
	font-weight: bold

h1
	font_size = 28
	rem(font-size, font_size)
	rem(line-height, font_size*(4/3))

h2
	font_size = 21
	rem(font-size, font_size)
	rem(line-height, font_size*(4/3))
	color black
	margin-bottom: 10px

h3
	font_size = 18
	rem(font-size, font_size)
	rem(line-height, font_size*(4/3))

h4
	font_size = 16
	rem(font-size, font_size)
	rem(line-height, font_size*(4/3))

p, .wp-caption, .wp-caption-dd, .post-content, .tweet_list, .box, #nav-wrapper + label:after
	font-family: "Calibri", Arial, Verdana, sans-serif
	font_size = 15
	rem(font-size, font_size)
	rem(line-height, font_size*(4/3))

#logo
	display inline-block
	margin 10px
	padding-top 15px
	height logo_height - 20px - 15px
	background core_logo_img no-repeat
	padding-left logo_height - 15px
	color #000
	font-family 'Orbitron', sans-serif
	font-size 28px
	text-align justify

#searchform
	position static
	display inline-block
	float right
	padding-top ((logo_height - searchform_height) / 2)
	padding-right box_margin*2
	padding-bottom box_margin*2


	@media screen and (max-width: 400px)
		padding-top ((logo_height - searchform_height) / 4)
#s
	border_thickness = 1px
	display inline-block
	color #e2e2e2
	border border_thickness solid brown
	background search_img, darkened_orange
	background-repeat no-repeat
	background-position center right, top left
	font-size 13px
	font-family "Lucida Grande", "Lucida Sans Unicode", Arial, Verdana, sans-serif
	width 190px
	height searchform_height - border_thickness * 2
	padding 0
	margin 0
	padding-right searchform_height

	&:hover, &:active
		background search_img, darken(orange, 50%)
		background-repeat no-repeat
		background-position center right, top left

#searchsubmit
	opacity 0
	position relative
	margin 0
	margin-left -(searchform_height)
	width searchform_height
	height searchform_height
	padding 0
	z-index 9999

.header-short, .header
	// Old browsers
	background orange
	//background radial-gradient(50% 0 45deg, circle closest-corner, rgba(255,255,255,.5) 0%, transparent 100%), orange
	// FF3.6+
	background -moz-radial-gradient(top, ellipse cover, rgba(255,255,255,0.20) 0%, transparent 100%), orange
	// Chrome,Safari4+
	background -webkit-gradient(radial, center top, 0px, center center, 100%, color-stop(0%,rgba(255,255,255,0.20)), color-stop(100%,transparent)), orange
	// Chrome10+,Safari5.1+
	background -webkit-radial-gradient(top, ellipse cover, rgba(255,255,255,0.20) 0%,transparent 100%), orange
	// Opera 12+
	background -o-radial-gradient(top, ellipse cover, rgba(255,255,255,0.20) 0%,transparent 100%), orange
	// IE10+
	background -ms-radial-gradient(top, ellipse cover, rgba(255,255,255,0.20) 0%,transparent 100%), orange
	// W3C
	background radial-gradient(ellipse at top, rgba(255,255,255,0.20) 0%,transparent 100%), orange


.header
